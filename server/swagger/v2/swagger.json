          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "description": "Token gotten from login or sign up is placed in x-access-token ",
            "required": true
